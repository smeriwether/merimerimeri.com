<section class="mb-12" >
  <% @posts.sort_by { |p| p.published_date }.reverse.each do |post| %>
    <article class="rounded-lg border border-gray-200 shadow mb-6 group dark:border-gray-500">
      <a href="<%= post.slug %>.html" class="p-6 flex flex-col justify-center text-center md:p-8">
        <header class="mb-5">
          <span class="text-sm text-gray-500 dark:text-gray-400"><%= post.published_date.strftime("%B %e, %Y") %></span>
          <h2 class="font-bold text-2xl md:text-3xl"><%= post.title %></h2>
        </header>
        <p class="text-left mb-8">
          <%== post.content[0...350].strip %><%= post.content.length > 300 ? "..." : "" %>
        </p>

        <div>
          <span class="inline-block rounded-full py-2 px-4 text-gray-600 border border-gray-300 text-sm font-bold group-hover:bg-indigo-600 group-hover:text-white dark:text-gray-300 dark:border-gray-500">
            Read more
          </span>
        </div>
      </a>
    </article>
  <% end %>
</section>
